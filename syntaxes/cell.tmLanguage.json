{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cell",
	"patterns": [
		{
			"include": "#decimal"
		},
		{
			"include": "#hex"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#keywords-memory"
		},
		{
			"include": "#keywords-math"
		},
		{
			"include": "#keywords-conditional"
		},
		{
			"include": "#keywords-chromosomes"
		},
		{
			"include": "#keywords-process"
		},
		{
			"include": "#keywords-registers-counters"
		},
		{
			"include": "#keywords-messages"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#structures"
		},
		{
			"include": "#markers"
		}
	],
	"repository": {
		"variable": {
			"patterns": [
				{
					"name": "variable",
					"match": "\\b[a-zA-Z]+\\b"
				}
			]
		},
		"hex": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b0x[0-9a-fA-F]+\\b"
				}
			]
		},
		"labels": {
			"patterns": [
				{
					"name": "markup.bold",
					"match": "(^\\:[a-zA-Z_]+|\\@[a-zA-Z_]+)"
				}
			]
		},
		"decimal": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b[0-9\\+\\-e\\.]+\\b"
				}
			]
		},
		"structures": {
			"patterns": [
				{
					"match": "^\\s*(STRUCT)\\s+([_$[:alpha:]][_$[:alnum:]]*)?\\s*",
					"captures": {
						"1": {
							"name": "storage.type.function.cell"
						},
						"2": {
							"name": "entity.name.function.cell"
						}
					}
				}
			]
		},
		"registers": {
			"patterns": [
				{
					"name": "support.variable.register.cell",
					"match": "\\b(SP|TP|CC|RC)\\b"
				}
			]
		},
		"markers": {
			"patterns": [
				{
					"name": "constant.language.cell",
					"match": "\\s?(\\.ENTRY|\\.RET|\\.INHIBIT|\\.DECLR)\\b"
				}
			]
		},
		"keywords-memory": {
			"patterns": [
				{
					"name": "keyword.control.cell",
					"match": "\\b(POKE|PEEK|CLR|NPOKE|NPEEK|ALLOC)\\b"
				}
			]
		},
		"keywords-math": {
			"patterns": [
				{
					"name": "keyword.control.cell",
					"match": "\\b(DECR|INCR|ADD|SUB|MUL|DIV|MOD|AND|XOR|OR)\\b"
				}
			]
		},
		"keywords-conditional": {
			"patterns": [
				{
					"name": "keyword.control.cell",
					"match": "\\b(JMP|JMPZ|JMPNZ|JMPNE|JMPE|JMPG|JMPGE|CMP|FORK)\\b"
				}
			]
		},
		"keywords-chromosomes": {
			"patterns": [
				{
					"name": "keyword.control.cell",
					"match": "\\b(OCHDR)\\b"
				}
			]
		},
		"keywords-process": {
			"patterns": [
				{
					"name": "keyword.control.cell",
					"match": "\\b(WEVENT|PRIVLG)\\b"
				}
			]
		},
		"keywords-registers-counters": {
			"patterns": [
				{
					"name": "keyword.control.cell",
					"match": "\\b(ZERO|INCRC|DECRC|SHIFT|ORCPT)\\b"
				}
			]
		},
		"keywords-messages": {
			"patterns": [
				{
					"name": "keyword.control.cell",
					"match": "\\b(DMESG|WMHDR)\\b"
				}
			]
		},
		"strings": {
			"name": "string.unquoted.cell",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cell",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.assembly.cell"
}